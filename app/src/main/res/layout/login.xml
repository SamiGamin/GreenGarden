<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/long_text_recontrasena"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/aca"
    tools:context=".Login">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="#5AFFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#3FFFFFFF"
                app:cardCornerRadius="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/long_img_icon">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha=".6"
                    android:src="@drawable/targeta_login" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="15dp"
                    android:orientation="vertical">

                    <TextView

                        android:id="@+id/long_tex_ingresar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:text="@string/iniciar_c"
                        android:textColor="@color/black"
                        android:textSize="30sp"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/long_text_usuario"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="21dp"
                        android:layout_marginTop="10dp"

                        android:layout_marginEnd="25dp"
                        android:text="Usuario"
                        android:textColor="@color/black"
                        android:textSize="28sp" />

                    <EditText
                        android:id="@+id/long_editText_email"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="25dp"
                        android:ems="10"
                        android:background="@drawable/editex_bg"
                        android:hint="Email: "
                        android:inputType="textEmailAddress"
                        android:drawableLeft="@drawable/email"
                        android:textColor="@color/black"
                        android:textColorHint="@color/hingt"
                        android:textSize="28sp" />

                    <TextView
                        android:id="@+id/long_text_contrase"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="21dp"
                        android:layout_marginTop="10dp"

                        android:layout_marginEnd="25dp"
                        android:text="Contraseña"
                        android:textColor="@color/black"
                        android:textSize="28sp" />

                    <EditText
                        android:id="@+id/long_editText_contrasena"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="25dp"
                        android:ems="10"
                        android:drawableLeft="@drawable/lock"
                        android:hint="Contraseña: "
                        android:inputType="textPassword"
                        android:background="@drawable/editex_bg"
                        android:textColor="@color/black"
                        android:textColorHint="@color/hingt"
                        android:textSize="28sp" />

                    <TextView
                        android:id="@+id/long_btn_ingresar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/titulo"
                        android:padding="10dp"
                        android:text="@string/btningreso"
                        android:textAlignment="center"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/long_tex_reduistrate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"

                        android:layout_marginTop="20dp"
                        android:text="¿Eres nuevo? Regístrate"
                        android:textColor="#7C4DFF" />

                    <TextView
                        android:id="@+id/long_text_recuntrasena"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp"
                        android:text="Recupera tu contraseña"
                        android:textColor="#7C4DFF" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/long_titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x_lg"
                android:background="@drawable/titulo"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="@string/app_name"
                android:textSize="28dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView

                android:id="@+id/long_img_icon"
                android:layout_width="210dp"
                android:layout_height="180dp"
                android:layout_marginTop="@dimen/lg"
                android:background="@drawable/icono"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/long_titulo" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
        </ScrollView>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>