<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="6dp"
    android:elevation="6dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <!-- <de.hdodenhof.circleimageview.CircleImageView
             android:layout_width="80dp"
             android:layout_height="80dp"
             android:src="@drawable/fondoinfantil"
             android:layout_centerVertical="true"
             android:id="@+id/img_lista"
             app:civ_border_width="2dp"
             app:civ_border_color="@color/black"/>-->

        <TextView
            android:id="@+id/nombre_lista"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Nombre"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />
         <TextView
             android:layout_marginTop="@dimen/sm"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:id="@+id/fechasiembra_lista"
             android:text="fecha Siembra"
             android:textSize="25sp"
             android:textColor="@color/black"
             android:layout_below="@+id/nombre_lista"
             android:layout_marginStart="10dp"/>
         <TextView
             android:layout_marginTop="@dimen/sm"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:id="@+id/humedad"
             android:text="humedad"
             android:textSize="25sp"
             android:textColor="@color/black"
             android:layout_below="@+id/fechasiembra_lista"
             android:layout_marginStart="10dp"/>
         <TextView
             android:layout_marginTop="@dimen/sm"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:id="@+id/luzSolar"
             android:text="Luz Solar"
             android:textSize="25sp"
             android:textColor="@color/black"
             android:layout_below="@+id/humedad"
             android:layout_marginStart="10dp"/>
         <TextView
             android:layout_marginTop="@dimen/sm"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:id="@+id/riego"
             android:text="Riego"
             android:textSize="25sp"
             android:textColor="@color/black"
             android:layout_below="@+id/luzSolar"
             android:layout_marginStart="10dp"/>
         <TextView
             android:layout_marginTop="@dimen/sm"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:id="@+id/temperatura"
             android:text="Temperatuara"
             android:textSize="25sp"
             android:textColor="@color/black"
             android:layout_below="@+id/riego"
             android:layout_marginStart="10dp"/>
         <TextView
             android:layout_marginTop="@dimen/sm"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:id="@+id/descripcion"
             android:text="Descripcion"
             android:textSize="25sp"
             android:textColor="@color/black"
             android:layout_below="@+id/temperatura"
             android:layout_marginStart="10dp"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>