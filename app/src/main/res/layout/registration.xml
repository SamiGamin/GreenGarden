<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    tools:context=".Login">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="#4651C174"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textView"
                style="@style/text"
                android:layout_marginTop="40sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombres y apellidos" />

            <EditText
                android:id="@+id/rg_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="25dp"
                android:ems="10"
                style="@style/text"
                android:textColor="@color/black"
                android:inputType="text"
                android:hint="Nombre: " />


            <!--<TextView
                android:id="@+id/textView2"
                style="@style/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fecha de nacimiento" />-->



            <TextView
                android:id="@+id/rg_fecha"
                style="@style/text"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:clickable="true"
                android:drawableEnd="@drawable/calendario"
                android:drawablePadding="16dp"
                android:focusable="true"
                android:gravity="center_vertical"
                android:hint="Fecha de nacimiento:"
                android:textColor="@color/black" />

            <!--<TextView
                android:id="@+id/textView3"
                style="@style/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Género" />-->

            <Spinner
                android:id="@+id/spinner"
                style="@style/text"

                android:layout_width="match_parent"
                android:layout_height="48dp" />

            <TextView
                android:id="@+id/textView4"
                style="@style/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Correo electrónico" />

            <EditText
                android:id="@+id/reg_editText_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="25dp"
                android:ems="10"
                style="@style/text"
                android:inputType="textEmailAddress"
                android:hint="Email: "
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/textView5"
                style="@style/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Usuario" />

            <EditText
                android:id="@+id/reg_editText_usuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="25dp"
                android:ems="10"
                style="@style/text"
                android:inputType="textPersonName"
                android:hint="Usuario: "
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/textView6"
                style="@style/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contraseña" />

            <EditText
                android:id="@+id/editTextcontrasena"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="25dp"
                android:ems="10"
                style="@style/text"
                android:inputType="textPassword"
                android:hint="Contraseña: "
                android:textColor="@color/black" />

            <CheckBox
                android:id="@+id/checkBox"
                style="@style/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:text="Acepto términos  condiciones  tratamiento de datos"
                />



            <TextView
                android:id="@+id/reg_btn_Registrarse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/titulo"
                android:padding="10dp"
                android:text="Registrarse"
                android:textAlignment="center"
                android:textColor="@color/white" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10sp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="25dp"
    android:orientation="horizontal">
            <TextView
                android:id="@+id/iniciar_Google"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="30sp"
                android:text="Registrate con:"
                android:textColor="#4F5050" />
    <TextView
        android:id="@+id/google"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="150dp"
        android:background="@drawable/google"/>
</LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>