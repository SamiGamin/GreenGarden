<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="2dp"
    android:layout_margin="5dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="@dimen/md">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/green"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginBottom="@dimen/md"
            android:text="Ingrese la cantidad de Plantas" />

        <EditText
            android:id="@+id/editTextCantidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginStart="@dimen/x_lg"
            android:layout_marginEnd="@dimen/x_lg"
            android:inputType="number"
            android:textAlignment="center"
            android:hint="Ingrese la cantidad" />

        <Button
            android:id="@+id/btnAceptar"
            android:background="#0049835B"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aceptar"
            android:textStyle="italic"
            android:textColor="#1B61D6"
            android:layout_gravity="end"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>